generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  avatar         String?
  Posts           Post[]
  // sessions      Session[]
 
}

model Post {
  id      String @id @default(uuid())
  content     String
  title       String
  creation    DateTime @default(now())
  
  authorId      String
  author   User @relation(fields: [authorId], references: [id])

  Cmnt        Comments[]
}

model Comments {
  id          String @id @default(uuid())
  content     String
  author      String
  Postid      String
  post        Post @relation(fields: [Postid], references: [id])


}
